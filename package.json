{
  "name": "verdict360-lite",
  "version": "1.0.0",
  "description": "AI Chatbot SaaS Platform for Law Firms - Multi-tenant system for South African legal practices",
  "main": "src/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon src/server/index.js",
    "client:dev": "cd src/client && npm start",
    "client:dev:docker": "cd src/client && PORT=3001 npm start",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd src/client && npm run build",
    "server:build": "babel src/server -d dist/server",
    "start": "node dist/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:rollback": "knex migrate:rollback",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "test:setup": "node scripts/test-setup.js"
  },
  "keywords": [
    "saas",
    "chatbot",
    "ai",
    "legal",
    "multi-tenant",
    "south-africa",
    "law-firms"
  ],
  "author": "Verdict 360 Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "knex": "^2.5.1",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "nodemailer": "^6.9.4",
    "stripe": "^13.5.0",
    "axios": "^1.5.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^3.0.0",
    "joi": "^17.9.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "winston": "^3.10.0",
    "googleapis": "^126.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.17",
    "@babel/preset-env": "^7.22.15",
    "@types/node": "^20.5.7",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}