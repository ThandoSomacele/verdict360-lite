{
  "name": "verdict360-lite",
  "version": "2.0.0",
  "description": "AI Legal Chatbot SaaS Platform - SvelteKit Edition for South African law firms",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:rollback": "knex migrate:rollback",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "test:setup": "node scripts/test-setup.js"
  },
  "keywords": [
    "saas",
    "chatbot",
    "ai",
    "legal",
    "multi-tenant",
    "south-africa",
    "law-firms",
    "sveltekit"
  ],
  "author": "Verdict 360 Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@sveltejs/adapter-auto": "^3.2.5",
    "@sveltejs/adapter-node": "^5.2.10",
    "@sveltejs/kit": "^2.8.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.8",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.44.1",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "supertest": "^6.3.3",
    "svelte": "^5.1.9",
    "svelte-check": "^4.0.4",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.2",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "googleapis": "^144.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lucide-svelte": "^0.541.0",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.0",
    "rate-limiter-flexible": "^5.0.3",
    "redis": "^4.7.0",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.8.0",
    "stripe": "^16.12.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^10.0.0",
    "winston": "^3.15.0"
